<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar stuff. -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sfui_display_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:padding">14dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sfui_display_regular</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.StepPickerNumber" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/sfui_display_medium</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.StepPickerNumber.Picked">
        <item name="android:textColor">@color/color_blue2</item>
    </style>

    <style name="AppTheme.BottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_dialog_top_corners</item>
    </style>

<!--    <style name="AppTheme.Launcher" parent="Fullscreen">-->
<!--        <item name="android:windowBackground">@drawable/launcher_screen_with_logo</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--    </style>-->

    <style name="Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigationActiveText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_nav_active</item>
        <item name="fontFamily">@font/sfui_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationInactiveText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_nav_active</item>
        <item name="fontFamily">@font/sfui_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>