<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/b_exit"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/ll_profile"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/i_profile"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                tools:src="@drawable/img_profile_placeholder"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

            <TextView
                android:id="@+id/tv_full_name"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/color_hard_gray"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="20sp"
                android:gravity="center"
                tools:text="Семочкин Константин Валерьевич"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/email"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="20sp"
                android:textColor="@color/gray3"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:background="@color/gray2"
               />

            <TextView
                android:id="@+id/tv_email_value"
                android:layout_width="match_parent"
                tools:text="@string/email"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/color_hard_gray"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_email" />

            <TextView
                android:layout_width="match_parent"
                android:text="@string/phone"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="20sp"
                android:textColor="@color/gray3"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:background="@color/gray2"
                />

            <TextView
                android:id="@+id/tv_phone_value"
                android:layout_width="match_parent"
                tools:text="@string/phone"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/color_hard_gray"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_phone" />


            <TextView
                android:layout_width="match_parent"
                android:text="@string/birth_date"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="20sp"
                android:textColor="@color/gray3"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:background="@color/gray2"
                />

            <TextView
                android:id="@+id/tv_birth_value"
                android:layout_width="match_parent"
                tools:text="@string/birth_date"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/color_hard_gray"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_birth_date" />

            <TextView
                android:layout_width="match_parent"
                android:text="@string/skype"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="20sp"
                android:textColor="@color/gray3"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:background="@color/gray2"
                />

            <TextView
                android:id="@+id/tv_skype_value"
                android:layout_width="match_parent"
                tools:text="@string/skype"
                android:fontFamily="@font/sfui_display_medium"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_small"
                android:textColor="@color/color_hard_gray"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="@dimen/margin_normal"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_skype" />
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/b_exit"
        style="@style/AppTheme.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:text="@string/exit"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/b_retry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/retry"
        android:visibility="gone"
        tools:visibility="visible" />

    <ProgressBar
        android:id="@+id/progress"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>