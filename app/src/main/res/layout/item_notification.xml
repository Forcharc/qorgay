<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_notification_body"
        android:layout_width="0dp"
        android:layout_margin="@dimen/margin_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_date"
        android:fontFamily="@font/sfui_display_medium"
        android:textSize="14sp"
        android:textColor="@color/color_hard_gray"
        tools:text="Ваша карта №63 зарегистрирована у администратора КОРГАУ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_margin="@dimen/margin_normal"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/sfui_display_light"
        android:textSize="12sp"
        android:textColor="@color/color_blue2"
        tools:text="12.12.2010"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:background="@color/gray2"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>